@model Shopping.Models.NewCart

@{
    ViewData["Title"] = "PostQty";
}

<h1></h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cart">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div>
                <h2>Item Name : @Html.DisplayFor(model => model.ItemName)</h2>
                <input type="hidden" asp-for="ItemName" class="form-control" />
                <br />
            </div>
            <div>
                <h2>Unit Price : @Html.DisplayFor(model => model.UnitPrice)</h2>
                <input type="hidden" asp-for="UnitPrice" class="form-control" />
                <br />
            </div>
            <div>
                <h2>Available Qty : @Html.DisplayFor(model => model.Qty)</h2>
                <input type="hidden" asp-for="Qty" class="form-control" />
                <br />
            </div>
            <div>
                <h2>Qty</h2>
                <input type="number" asp-for="MinQty" class="form-control" />
            </div>
            <input type="hidden" asp-for="ItemId" class="form-control" />

        </div>
        <div class="form-group">

            <input type="submit" value="Cart" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

