@model Shopping.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<br />
<br />



<div class="row">
    <div class="col-md-4">
            <form asp-action="Login">

                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Userid" class="control-label">User Name</label>
                    <input asp-for="Userid" class="form-control" />
                    <span asp-validation-for="Userid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User_Pwd" class="control-label">Password</label>
                    <input asp-for="User_Pwd" class="form-control" />
                    <span asp-validation-for="User_Pwd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>